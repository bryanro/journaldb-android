<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bryankrosenbaum.journaldb.app.CreateEntryActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextEntry"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/btnSubmitNewEntry"
        android:layout_below="@+id/textviewEntryDate"
        android:hint="What did you do today?"
        android:gravity="top"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit New Entry"
        android:id="@+id/btnSubmitNewEntry"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="createNewEntryClick" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2014-12-12"
        android:id="@+id/textviewEntryDate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="32dp" />
</RelativeLayout>
